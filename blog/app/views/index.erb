<div class="index-page">
	<h1>My Blog</h1>
		<h2> New Post:</h2>
	<div class="input_post">
		<form method="post" action="/index">
			<p>
				<input type="text"	name="title" placeholder="Your title">
			</p>
			<textarea rows="20" cols="80" type="text" name="body" placeholder="Your post"></textarea><br>
			<button type="submit">Post</button>
	</div>
	<h2> These are your posts:</h2>
		<ul class="blog-post">
  			<% @posts.each do |post| %>
				<li class="post-body">		
					<p><strong>Title:</strong> <%= post.title %></p>
					<%= post.body.truncate(40) %><br>
					<em>Comments:  <%= post.comments.count %></em><br>
					<a href="/show/<%= post.id %>">Show More</a>
					<a href="/edit/<%= post.id %>">Edit</a>
					<a href="/delete/<%= post.id %>">Delete</a>
				</li><br>
  			<% end %>
		</ul>
</div>
